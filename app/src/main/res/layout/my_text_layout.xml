<?xml version="1.0" encoding="utf-8"?>
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:transitionName="main_imageview_game"
                android:id="@+id/main_imageview_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:src="@drawable/ic_launcher"
                />
            <TextView
                android:id="@+id/main_tv_title"
                android:layout_below="@id/main_imageview_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="100"/>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_below="@id/main_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/main_tv_views"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="100"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/main_tv_views"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/eye_icon"
                    />
            </RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>